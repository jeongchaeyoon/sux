/*기본설정*/
body {
	color: #494949;
	font-family: Arial, Helvetica, sans-serif;
	font-size: 10pt;
	font-style: normal;
	text-decoration: none;
	margin: 0px 0px 0px 20px;
	padding: 0px;
	line-height: 18px;
}
td {
	font-family: Verdana, Arial, Helvetica, sans-serif;
	font-size: 10pt;
    line-height: 18px;
	font-weight: normal;
	color: #494949;
	text-decoration: none;
}
td a:link {	font-family: Arial, Helvetica, sans-serif;
	font-size: 10pt;
    font-style: normal;
    line-height: 18px;
    color: #494949;
    text-decoration: underline;
}
td a:visited {	font-family: Arial, Helvetica, sans-serif;
	font-size: 10pt;
	font-style: normal;
	line-height: 18px;	
	color: #494949;
	text-decoration: underline;
}
td a:hover {
	font-family: Arial, Helvetica, sans-serif;
	font-size: 10pt;	font-style: normal;
	line-height: 18px;
	color: #EA0000;
	text-decoration: underline;
}
td a:active {
	font-family: Arial, Helvetica, sans-serif;
	font-size: 10pt;
	font-style: normal;
	line-height: 18px;
	color: #EA0000;
	text-decoration: underline;
}
img {
	border: none;
}
input{ 
    Background-Color:#F8F8F8;
	Border:1px Solid #C3C3C3;
	Color:#7B7B7B; font : 8pt ;
	Line-height:18px; height:21px;
}

/*다크블루*/
a.darkblue:link {
	font-family: Arial, Helvetica, sans-serif;
	font-size: 10pt;
	font-style: normal;
	line-height: 18px;
	color: #006666;
	text-decoration: none;
}
a.darkblue:visited {
	font-family: Arial, Helvetica, sans-serif;
	font-size: 10pt;
	font-style: normal;
	line-height: 18px;
	color: #666666;
	text-decoration: none;
}
a.darkblue:hover {
	font-family: Arial, Helvetica, sans-serif;
	font-size: 10pt;
	font-style: normal;
	line-height: 18px;
	color: #0099CC;
	text-decoration: none;
}
a.darkblue:active {
	font-family: Arial, Helvetica, sans-serif;
	font-size: 10pt;
	font-style: normal;
	color: #0099CC;
}